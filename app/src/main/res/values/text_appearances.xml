<resources>

    <style name="TextAppearance" />

    <style name="TextAppearance.H1">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.H1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H1.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.H2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.H2.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.H3">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.H3.PrimaryColor">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextAppearance.H3.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.H3.Italic.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>